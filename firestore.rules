rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an admin via custom claims.
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // WORKERS: Manages user profiles.
    match /workers/{workerId} {
      // Any authenticated user can read the list of workers (for filtering etc.).
      allow list: if request.auth != null;
      // An admin can read any worker document.
      // A user can only read their own document.
      allow get: if request.auth.uid == workerId || isAdmin();
      // Only admins can create, update, or delete workers.
      allow create, update, delete: if isAdmin();
    }

    // ATTENDANCE-LOGS: Tracks sign-in and sign-out events.
    match /attendance-logs/{logId} {
      // A user can only create logs for themselves.
      allow create: if request.auth.uid == request.resource.data.workerId;
      // An admin can read all logs.
      // A user can only read their own logs.
      allow read: if isAdmin() || (request.auth.uid == resource.data.workerId);
      // Only admins can update or delete logs.
      allow update, delete: if isAdmin();
    }
    
    // TASKS: Manages worker assignments.
    match /tasks/{taskId} {
      // An admin can read all tasks.
      // A user can only read tasks assigned to them.
      allow read: if isAdmin() || (request.auth.uid == resource.data.workerId);
      // Only admins can create, update, or delete tasks.
      allow create, update, delete: if isAdmin();
    }

    // SETTINGS: Manages organization-wide settings.
    match /settings/organization {
      // Only admins can read or write settings.
      allow read, write: if isAdmin();
    }
  }
}
